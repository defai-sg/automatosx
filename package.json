{
  "name": "@defai.digital/automatosx",
  "version": "5.3.7",
  "description": "AI Agent Orchestration Platform",
  "type": "module",
  "publishConfig": {
    "provenance": true,
    "access": "public"
  },
  "bin": {
    "automatosx": "./dist/index.js",
    "ax": "./dist/index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/cli/index.ts",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:all": "vitest run",
    "test:smoke": "bash tests/smoke/smoke-test.sh",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run test:all && npm run build",
    "prepack": "npm run build",
    "postpack": "echo '‚úÖ Package created successfully'",
    "version": "node tools/sync-version.js && git add version.json",
    "version:patch": "npm version patch -m 'chore: bump version to %s'",
    "version:minor": "npm version minor -m 'chore: bump version to %s'",
    "version:major": "npm version major -m 'chore: bump version to %s'",
    "version:beta": "npm version prerelease --preid=beta -m 'chore: bump version to %s'",
    "sync:version": "node tools/sync-version.js",
    "sync:all-versions": "node tools/sync-all-versions.js",
    "prerelease": "npm run sync:all-versions && npm run typecheck && npm run test:all",
    "release:check": "node tools/check-release.js",
    "check:size": "bash tools/check-package-size.sh",
    "tools:check": "bash -c 'echo \"üîç Checking shell scripts syntax...\"; for f in tools/*.sh; do echo \"  Checking $f...\"; bash -n \"$f\" && echo \"  ‚úì $f OK\" || echo \"  ‚úó $f FAILED\"; done; echo \"‚úÖ All tools checked\"'"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.7.1",
    "@types/yargs": "^17.0.33",
    "@vitest/coverage-v8": "^3.2.4",
    "markdownlint-cli": "^0.45.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "find-up": "^8.0.0",
    "js-yaml": "^4.1.0",
    "ora": "^9.0.0",
    "sqlite-vec": "^0.1.7-alpha.2",
    "yargs": "^18.0.0"
  },
  "files": [
    "dist",
    "examples",
    "version.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "ai",
    "agent",
    "orchestration",
    "automation",
    "llm",
    "claude",
    "gemini",
    "openai",
    "vector-search",
    "sqlite",
    "typescript",
    "ai-agents"
  ],
  "author": "AutomatosX Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/defai-digital/automatosx.git"
  },
  "bugs": {
    "url": "https://github.com/defai-digital/automatosx/issues"
  },
  "homepage": "https://automatosx.com",
  "overrides": {
    "esbuild": "^0.25.0"
  }
}
