# AutomatosX Environment Configuration

# Provider Mode (set to 'false' to use real CLI commands)
AUTOMATOSX_MOCK_PROVIDERS=true

# Logging Configuration
LOG_LEVEL=info
LOG_PATH=.automatosx/logs

# Memory Configuration
MEMORY_MAX_ENTRIES=10000
MEMORY_CLEANUP_DAYS=30

# Workspace Configuration
WORKSPACE_CLEANUP_DAYS=7
WORKSPACE_MAX_FILES=100

# Provider Timeouts (milliseconds)
CLAUDE_TIMEOUT=120000
GEMINI_TIMEOUT=180000

# Claude Provider
CLAUDE_COMMAND=claude
CLAUDE_API_KEY=

# Gemini Provider
GEMINI_COMMAND=gemini
GEMINI_API_KEY=

# Performance
PROFILE_CACHE_SIZE=20
ABILITY_CACHE_SIZE=50
